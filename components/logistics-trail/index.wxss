.steps {
  padding: 30rpx;
  background: #ffffff;
  overflow: hidden;
}
.steps-item {
  position: relative;
  color: #313131;
}
.steps-item.steps-item-finish .steps-item-circle {
  background: #FFC34C;
}
.steps-item.steps-item-finish .steps-item-line {
  background: #FFC34C;
}
.steps-item:not(:last-child) .steps-item-content {
  position: relative;
}
.steps-item:not(:last-child) .steps-item-content::after {
  content: '';
  display: block;
  height: 4rpx;
  position: absolute;
  left: 220rpx;
  right: 0;
  bottom: 0;
  border-bottom: 1rpx solid #eeeeee;
}
.steps-item-content {
  padding: 25rpx 0 25rpx 220rpx;
}
.steps-item-subTitle {
  font-size: 28rpx;
  font-weight: 700;
}
.steps-item-des {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
}
.steps-item-title {
  padding-top: 20rpx;
  width: 140rpx;
  line-height: 36rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
}
.steps-item-title-top {
  font-weight: 700;
}
.steps-item-circle {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 50%;
  left: 180rpx;
  transform: translate3d(-50%, -50%, 0);
  border-radius: 100%;
  background: #FFF2E4;
}
.steps-item-line {
  width: 1px;
  height: 300%;
  position: absolute;
  top: 50%;
  left: 180rpx;
  background: #FFF2E4;
}
