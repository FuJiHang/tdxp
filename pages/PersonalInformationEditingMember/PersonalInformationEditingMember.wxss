/* pages/PersonalInformationEditingMember/PersonalInformationEditingMember.wxss */

#PIEM-box {
  width: 100%;
}

.PIEM-top-box {
  width: 100%;
  height: 200rpx;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
}

.PIEM-top-box2 {
  width: 100%;
  height: 120rpx;
  display: flex;
}

.PIEM-top-left {
  width: 150rpx;
  height: 120rpx;
  display: flex;
  justify-content: flex-end;
}

.PIEM-top-left-img {
  width: 120rpx;
  height: 120rpx;
}

.PIEM-top-right {
  flex: 1;
  height: 100%;
  margin-left: 30rpx;
}

.PIEM-top-right view {
  height: 40rpx;
  color: #fff;
}

.PIEM-top-right span {
  margin-left: 15rpx;
}

.PIEM-name {
  font-size: 28rpx;
}

.PIEM-time {
  font-size: 28rpx;
}

.PIEM-address {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.PIEM-address image {
  width: 35rpx;
  height: 35rpx;
  filter: invert(98%) sepia(2%) saturate(7494%) hue-rotate(259deg) brightness(119%) contrast(99%);
}

.PIEM-basic-box {
  width: 100%;
  background: #fff;
}

.PIEM-basic-title-box {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: flex-end;
}

.PIEM-basic-title-box2 {
  width: 95%;
  height: 100%;
  border-bottom: 1px solid #e5e5e5;
}

.PIEM-basic-title-box2 span {
  font-size: 26rpx;
  color: #666;
  line-height: 88rpx;
  height: 88rpx;
}

.PIEM-basic-list-box {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.PIEM-basic-list-box2 {
  width: 95%;
  height: 71rpx;
  display: flex;
}

.PIEM-basic-list-title, .PIEM-basic-list-val {
  color: #666;
  font-size: 28rpx;
  height: 71rpx;
  line-height: 71rpx;
}

.PIEM-basic-list-title {
  width: 100rpx;
}

.PIEM-basic-list-val {
  margin-left: 107rpx;
}

.PIEM-bio-box {
  width: 100%;
  height: 277rpx;
  display: flex;
  justify-content: flex-end;
  background: #fff;
  margin-top: 40rpx;
}

.PIEM-bio-box2 {
  width: 95%;
  height: 100%;
}

.PIEM-bio-title {
  width: 150rpx;
  height: 80rpx;
  /* background: blue; */
  line-height: 80rpx;
  color: #666;
  font-size: 28rpx;
}

.PIEM-bio-content {
  height: 152rpx;
  width: 675rpx;
  /* background: yellow; */
  color: #999;
  word-wrap: break-word;
  font-size: 26rpx;
}
