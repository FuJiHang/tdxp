/* pages/pointDetail/pointDetail.wxss */

page {
  background: #f5f5f5;
  overflow-x: hidden;
}

/* 轮播 */

.banner-wrap {
  position: relative;
  width: 100%;
  background: #fff;
}

/* 商品详情 */

.pointInfo {
  width: 100%;
  background: #fff;
  padding: 20rpx;
  font-size: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.pointInfo .title {
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-weight: bold;
  font-size: 34rpx;
}

.pointInfo .desc {
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
  padding-right: 30rpx;
  box-sizing: border-box;

}
.pointInfo .needPoint {
  border-top: 1px solid rgb(250, 250, 250);
  color: #f56f68;
  display: flex;
  align-items: flex-end;
  padding: 20rpx 0;
}
.pointInfo .needPoint span {
 
  font-size: 32rpx;
  margin: 0 10rpx;
}

.pointInfo .needPoint image{
  height: 40rpx;
  width: 40rpx;
}
/* 商品图片 */

.detailImg {
  font-size: 28rpx;
  margin-bottom: 80rpx;
}
.pointInfo .detfu{
  display: flex;

}
.pointInfo .detfu .child{
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  align-items: center;
  border-right: 1px solid rgb(250, 250, 250);
}
.pointInfo .detfu .child image{
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  filter: grayscale(90%);
}
.pointInfo .detfu .child .van-icon{
  
  margin:5rpx 20rpx 0 0;
}
.detailImg .line {
  width: 80%;
  position: relative;
  text-align: center;
  zoom: 1;
  margin: 20rpx auto;
  color: #999;
}

.detailImg .line span:before {
  content: "";
  width: 35%;
  height: 2rpx;
  position: absolute;
  border-top: solid 2rpx #e5e5e5;
  right: 0;
  top: 50%;
}

.detailImg .line span:after {
  content: "";
  width: 35%;
  height: 2rpx;
  position: absolute;
  border-top: solid 2rpx #e5e5e5;
  left: 0;
  top: 50%;
}

.detailImg .imgArr {
  width: calc(100% - 40rpx);
  background: #fff;
  padding: 20rpx;
}

.detailImg .imgArr image {
  width: 100%;
}

/* 按钮 */

.submit {
  flex: 1;
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: #f56f68;
  font-size: 30rpx;
}
.colorT{
  background: rgb(255, 128, 24);
}

.fuBtn{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  
}
.btn {
  width: calc(100% - 20rpx);
  position: fixed;
  left: 10rpx;
  bottom: 5%;
  z-index: 99;
}
.btn .van-button {
  width: 100%;
  background:linear-gradient(90deg,rgba(255,83,83,1) 0%,rgba(255,43,149,1) 100%);
  border-radius:54rpx;
  color: #fff;
  height:90rpx;
  font-size: 32rpx;
  font-weight: bold;
}