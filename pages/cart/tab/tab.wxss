  font-size: 28rpx;
}

.tab2-cart image {
  width: 60rpx;
  margin-right: 15rpx;
}

.tab2-me image {
  width: 45rpx;
}

.tab2-me text {
  color: #fff;
  font-size: 24rpx;
  margin-top: 5rpx;
}

.tab2-cartIcon {
  position: relative;
}

.gListTotal {
  position: absolute;
  top: -2rpx;
  right: 10rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: #FF9966;
  font-size: 24rpx;
  color: #fff;
}

.cartBg {
  background: linear-gradient(0deg, rgba(255, 204, 153, 0.94), rgba(224, 169, 110, 0.94));
}

