.fuBtnNav {
  position: fixed;
  width: calc(100% - 20rpx);
  left: 10rpx;
  bottom: 190rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 54rpx;
  height: 90rpx;
  border-radius: 27px;
  padding-left: 24rpx;
  box-sizing: border-box;
  color: #666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.fuBtnNav .flex {
  margin-left: 16rpx;
  flex: 1;


}

.fuBtnNav .mini {
  font-size: 18rpx;
  margin-right: 5rpx;
}

.fuBtnNav .all {
  color: #333;
  font-weight: bold;
}

.fuBtnNav .red {
  font-size: 28rpx;
  color: #FB1F4F;
  font-weight: bold;
  margin: 0 16rpx 0 2rpx;
}

.fuBtnNav .van-button {
  width: 290rpx;
  height: 90rpx;
  background: linear-gradient(90deg, rgba(255, 83, 83, 1) 0%, rgba(255, 43, 149, 1) 100%);
  border-radius:54rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}