/* pages/pointStore/pointStore.wxss */
page {
  height: 100%;
  background-color: #F56F68;
}

.banner {
  width: 100%;
  height: 330rpx;
  display: flex;
  justify-content: center;
}

.content {
  width: 100%;
  height: auto;
  box-sizing: content-box;
}

.title {
  width: 450rpx;
  height: 30rpx;
  position: relative;
  padding-top: 22rpx;
  margin: 0 auto;
}

.title .text {
  font-size: 36rpx;
  color: white;
  position: absolute;
  top: 10rpx;
  left: 85rpx;
}

.li {
  display: flex;
  width: 714rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
}

.list {
  width: 348rpx;
  height: auto;
  background-color: white;
  margin: 28rpx 0 0 0;
}

.list image {
  width: 348rpx;
  height: 348rpx;
}

.list .jifen {
  width: 182rpx;
  height: 40rpx;
  border-radius: 19rpx;
  background-color: #F56F68;
  color: white;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto;
}

.list .txt {
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #e5e5e5;
  padding: 15rpx 5rpx 0 13rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 42rpx;
}

.fujihangF{
  display: flex;
  flex-direction: column;
  height: 150rpx;
}
.list .price {
  flex: 1;
  display: flex;
  align-items: flex-end;
  font-size: 32rpx;
  font-weight: bold;
  color: #F56F68;
  margin: auto 0 13rpx 13rpx;
}

.list .price text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  text-decoration: line-through;
  font-weight: lighter;
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/*缺省页*/

.empty {
  margin: 100rpx auto;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  color: white;
  text-align: center;
  font-size: 16px;
}

.empty>image {
  margin: 0 auto;
  width: 360rpx;
  height: 360rpx;
}
