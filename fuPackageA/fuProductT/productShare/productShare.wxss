/* component/productShare.wxss */

@import "../all.wxss";
/* 蒙版 */

.maskStyle {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-direction: column;
}

.maskStyle .canvasBox {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
}

.maskStyle .canvasBox .content {
  width: 100%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.maskStyle .canvasBox .canvasStyle {
  width: 320px;
  height: 480px;
  background: #c9c2c2;
}

.maskStyle .canvasBox .bottomShare {
  width: 100%;
  height: 20%;
  background: #fff;
  border-radius: 10rpx 10rpx 0 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

.maskStyle .canvasBox .shareLeft {
  position: relative;
}

.maskStyle .canvasBox .shareLeft .opacity {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
}

.maskStyle .canvasBox .shareLeft image, .shareRight image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
