/* modal */
.gModal{
  background: rgba(0,0,0,0.5);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 10000;
}

.content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  /* height: 776rpx; */
  height: 500rpx;
  border-radius: 6rpx 6rpx 0 0;
  padding: 30rpx;
  padding-bottom: 206rpx;
}

.goodsInfo{
