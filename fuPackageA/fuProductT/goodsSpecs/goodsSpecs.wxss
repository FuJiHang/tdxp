}
.btn1{
  background:#05083E !important;
}
.btn2{
  background:linear-gradient(90deg,rgba(255,83,83,1) 0%,rgba(255,43,149,1) 100%) !important;
}
.animation_star{ 
   animation: myfirst 1s ease;
   animation-fill-mode: forwards;
} 

@keyframes myfirst
{
  0%   {
    transform:translate(250%,-300px) scale(1, 1);
  }
  25% {
   transform:translate(250%,-300px) scale(3, 3);
  }
  50% {
   transform:translate(250%,-300px) scale(0.8, 0.8);
  }
  75%{
   transform:translate(250%,-300px) scale(1, 1);
  }
  100% {
    transform:translate(0px,0px)  scale(0.4, 0.4);
  }
}
