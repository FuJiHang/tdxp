.icon_img{
  width: 50rpx !important;
  height: 50rpx !important;
}
.icon_text{
  margin-left: 26rpx;
}

.c-tab{
  height: 95rpx;
  background-color: #fff;
  color: #333;
  font-size: 26rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border: 1rpx solid #e5e5e5;
}

.ct-num{
  padding: 0 30rpx 0 50rpx;
}

.ct-btn{
  background: linear-gradient(-90deg, #ff7a52, #ffa78c);
  padding: 0 40rpx;
  line-height: 95rpx;
  color: #fff;
  box-sizing: border-box;
}
