/* fuPackageA/setCustomer/setCustomer.wxss */

.plane {
  padding: 20rpx;
  margin: 20rpx 0 0;
  background: #fff;
}

.plane .block {
  display: flex;
  color: #333;
  font-size: 26rpx;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.plane .block input {
  flex: 1;
}

.plane .block .remove {
  color: tomato;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid tomato;
}

.plane .block:last-child {
  border: 0;
  margin-top: 20rpx;
  align-items: flex-start;
}

.plane .block span {
  width: 200rpx;
}

.plane .block .uploading {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx dashed #999;
}

.plane .block .uploading .add {
  color: #999;
  font-size: 100rpx;
  font-weight: bold;
}

.plane .block .uploading image {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
}

.theAdd {
  color: #999;
  padding: 20rpx 0;
  font-size: 40rpx;
  text-align: center;
  background: #fff;
  margin-bottom: 240rpx;
  border-top: 1rpx solid #cccc;
}

/* 提交 */

.submitBtn {
  left: 4%;
  width: 92%;
  bottom: 10vh;
  color: #fff;
  position: fixed;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 8rpx;
  background: tomato;
}
