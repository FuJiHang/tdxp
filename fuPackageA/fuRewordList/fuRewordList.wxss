page {
  height: 100%;
  font-size: 26rpx;
  background: #fff;
}
#fuRewordList .navTop {
  color: #fff;
  text-align: center;
  box-sizing: border-box;
  font-weight: bold;
}
#fuRewordList .navTop image {
  width: 100%;
  height: 1rpx;
}
#fuRewordList .navTop .name,
#fuRewordList .navTop .val {
  margin-bottom: 20rpx;
}
#fuRewordList .navTop .name {
  font-size: 30rpx;
}
#fuRewordList .navTop .val {
  font-size: 40rpx;
}
#fuRewordList .bgTop {
  width: 100%;
  height: 1rpx;
}
#fuRewordList .contantAction {
  padding: 0 20rpx 20rpx;
  margin: 20rpx;
  box-sizing: border-box;
  background: linear-gradient(88deg, #f2e1c5, #f6cfbe);
  border-radius: 20rpx;
}
#fuRewordList .contantAction .child {
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 1rpx 1rpx 10rpx #c5c5c5;
}
#fuRewordList .contantAction .child .time_num {
  margin-bottom: 20rpx;
  display: flex;
}
#fuRewordList .contantAction .child .time_num .flex {
  flex: 1;
  text-align: right;
}
#fuRewordList .contantAction .child .time_num .red {
  color: #ff4c4c;
}
#fuRewordList .contantAction .child .contant {
  display: flex;
}
#fuRewordList .contantAction .child .contant image {
  height: 160rpx;
  width: 160rpx;
}
#fuRewordList .contantAction .child .contant .name_pri_btn {
  flex: 1;
  margin-left: 20rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
}
#fuRewordList .contantAction .child .contant .name_pri_btn .name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
#fuRewordList .contantAction .child .contant .name_pri_btn .pri {
  color: #999;
  text-decoration: line-through;
}
#fuRewordList .contantAction .child .contant .name_pri_btn .btn {
  flex: 1;
  align-items: flex-end;
  display: flex;
  justify-content: flex-end;
}
#fuRewordList .contantAction .child .contant .name_pri_btn .van-button {
  color: #fff;
  background: #ff4c4c;
}
#fuRewordList .navTip {
  padding: 20rpx;
  box-sizing: border-box;
  color: #a8642d;
  font-size: 40rpx;
  text-align: center;
  font-weight: 900;
  margin-bottom: 20rpx;
}
#fuRewordList .closeContant {
  height: 500rpx;
  overflow: auto;
}
#fuRewordList .noMore {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
  text-align: center;
  box-sizing: border-box;
}
#fuRewordList .fliter {
  filter: grayscale(100%);
}
