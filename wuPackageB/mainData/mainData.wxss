.main .input_wrap {
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #eee;
}
.main .input_wrap .title {
  flex: 1;
}
.main .input_wrap .input_data {
  flex: 4;
  padding-left: 30rpx;
}
.main .input_wrap .pla_style {
  font-size: 26rpx;
}
.main .active {
  height: 300rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
}
.main .active .add {
  position: absolute;
  top: 65rpx;
  width: 500rpx ;
  height: 200rpx;
}
.main .uploadImg {
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 15rpx 20rpx;
  position: relative;
}
.main .uploadImg .title_wrap {
  display: flex;
  align-items: center;
}
.main .uploadImg .title_wrap .up_title {
  font-size: 30rpx;
  color: #333;
}
.main .uploadImg .title_wrap .up_samll {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  padding-top: 5rpx;
}
.main .uploadImg .img_wrap {
  padding: 20rpx 0;
}
.main .uploadImg .img_wrap .pictbox {
  width: 100%;
  display: flex;
  padding: 0 0 15rpx 20rpx;
  position: relative;
  flex-wrap: wrap;
}
.main .uploadImg .img_wrap .pictbox .evalteimg {
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
  position: relative;
  border: 1px solid #c8c8c8;
}
.main .uploadImg .img_wrap .pictbox .evalteimg .tu {
  width: 100%;
  height: 100%;
}
.main .uploadImg .img_wrap .pictbox .evalteimg .close {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -14rpx;
  right: -13rpx;
}
.main .uploadImg .img_wrap .pictbox #img_name {
  position: absolute;
  top: 0;
  left: -99999999999;
  width: 0;
  height: 0;
  font-size: -999999;
}
.main .uploadImg .img_wrap .takepic {
  width: 110rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.main .uploadImg .img_wrap .takepic .pict {
  width: 100%;
}
.main .btn-area {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}
.main .btn-area .btn {
  width: 90%;
  background-color: red;
  color: #fff;
  border-radius: 50rpx;
}
