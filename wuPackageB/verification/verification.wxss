.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content .main {
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
}
.content .main .main_wrap {
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  border-top: 1rpx solid #eee;
}
.content .main .main_wrap .order {
  margin-bottom: 10rpx;
}
.content .main .img_wrap {
  border-top: 1rpx solid #eee;
  display: flex;
  padding: 20rpx;
}
.content .main .img_wrap .img {
  flex: 1;
}
.content .main .img_wrap .img .tdh_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.content .main .img_wrap .tdu_title {
  flex: 5;
  font-size: 30rpx;
  color: #333;
}
.content .btn {
  width: 90%;
  background-color: red;
  color: #fff;
  padding: 20rpx 0;
  box-sizing: border-box;
  text-align: center;
  margin-top: 100rpx;
  border-radius: 50rpx;
}
