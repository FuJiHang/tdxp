/* pages/newAddress/newAddress.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  overflow: hidden;
}

.fjh {
  height: 1px;

}

.box {
  padding-top: 14rpx;
  width: 100%;
  height: 100%;
  overflow: auto;
  /* padding: 30rpx 30rpx; */
  box-sizing: border-box;
}

.fromeBox {
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #fff;
}

.fromtop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(244, 244, 244, 1);
}

.shibie {
  width: 100%;
  display: flex;
  position: relative;
  align-items: center;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  padding: 30rpx 30rpx;
  color: rgba(177, 177, 177, 1);
}

.shibietext {
  height: 100rpx;
  width: 80%;
  /* background: #B1B1B1; */
  font-size: 26rpx;
  color: #B1B1B1;
}

.shibiebtn {
  height: 40rpx;
  color: #FFF;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  position: absolute;
  right: 25rpx;
  background: #CCCCCC;
}

.fromeone {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0rpx 32rpx;
  border-bottom: 1px solid rgba(245, 245, 245, 1);
}

.username {
  display: flex;
  align-items: center;
  color: #333;
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
}

.ipt {
  height: 100%;
  flex: 1;
  font-size: 22rpx;
  color: #999;
  text-align: right;
  /* background: yellow; */
}

.rightBtnBox {
  position: relative;
  display: flex;

  margin-top: -10rpx;
  align-items: center;
}

.rightBtnBox::before {
  content: "";
  width: 2rpx;
  height: 15rpx;
  right: 0rpx;
  position: absolute;
  background: #999;
  transform: rotate(-45deg);
}

.rightBtnBox::after {
  content: "";
  width: 2rpx;
  height: 15rpx;
  right: 0rpx;
  top: 2rpx;
  position: absolute;
  background: #999;
  transform: rotate(45deg);
}

.submintBtn {
  /* margin-top: 100rpx; */
  width:calc(100% - 64rpx) ;
  left: 32rpx;
  position: absolute;
  bottom: 100rpx;
  /* background: #f44; */
  border-radius: 50rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #CCCCCC;
  font-weight: bold;
}

.defluterAddressBox {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #FFFFFF;
  /* margin-top: 20rpx; */
  justify-content: space-between;
  padding: 0rpx 26rpx;
  border-top: 1px solid rgb(245, 245, 245);
}

.defaultetip {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.fromeBox .fromeone:last-child {
  border: none;
}

.placeHolder {
  flex: 1;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
}

.fromeone text {
  flex: 1;
  text-align: right;
  font-size: 22rpx;
  color: #999;
}

.showSubmintBtn {
  background:linear-gradient(90deg,rgba(255,83,83,1) 0%,rgba(255,43,149,1) 100%);
}